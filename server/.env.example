DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_NAME=salon_db
DB_PASSWORD=your_database_password_here
DB_DIALECT=postgres
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# CORS Configuration (Optional - for production with multiple origins)
# For single origin, CLIENT_URL is used automatically
# For multiple origins, add comma-separated list:
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
# CORS_ORIGIN=

# Seed Data (for development only)
SEED_EMPLOYEE_EMAIL=your_employee@example.com
SEED_EMPLOYEE_PASSWORD=your_password_here
SEED_EMPLOYEE_NAME=Your Name

# Email Configuration (for appointment notifications)
# For Gmail, you may need to use an App Password: https://support.google.com/accounts/answer/185833
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password-or-app-password

# SMS Configuration (Optional - for appointment notifications)
# Get these from Twilio: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Business Information (for notifications)
BUSINESS_NAME=Your Business Name

# Cloudinary Configuration (for media uploads)
# Get these from Cloudinary Dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
